<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Registration"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/emailr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration"
        android:layout_marginTop="20dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/passwordr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailr"
        android:layout_marginTop="20dp"
        android:hint="Password" />

    <EditText
        android:id="@+id/rolll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordr"
        android:layout_marginTop="20dp"
        android:hint="Roll_no" />


    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rolll"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Register" />

    <Button
        android:id="@+id/loginr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rolll"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/register"
        android:text="Next" />
</RelativeLayout>